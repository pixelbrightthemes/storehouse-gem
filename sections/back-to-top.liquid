{%- style -%}
  @media screen and (max-width: 749px) {
  #shopify-section-backtotop-button{
  	display: none;
  }
  }
    .backtotop_btn {
      display: none;
      position: fixed;
      bottom: {{ section.settings.distancefrombottom }}px;
      right: {{ section.settings.distancefromright }}px;
      z-index: 20;
      font-size: 32px;
      border: none;
      outline: none;
      cursor: pointer;
      padding: 1px;
      box-shadow: 0 0 2px rgba(var(--color-button-text), 0.5);
      border-radius: {% if section.settings.button_shape == 'circular' %}50%{% else %}4px{% endif %};
      width: {{ section.settings.button_size }}px;
      height: {{ section.settings.button_size }}px;
      vertical-align: middle;      
    }
    .backtotop_btn span {
      color: rgba(var(--color-button-text), 0.9);
      font-size:  {{ section.settings.button_size | divided_by: 1.5 }}px;
    }
    .backtotop_btn:hover {
      transform: scale(1.05);
    }
    @media screen and (max-width: 749px) {
      .backtotop_btn {
        display: none;
      }
    }
{%- endstyle -%}
<button id="backtotop_btn" onclick="topFunction()" class="color-{{ section.settings.color_scheme }} flex flex-column flex-center pbutton backtotop_btn" title="Go to top">  
<span>&uarr;</span> 
</button>

{% schema %}
{
  "name": "t:sections.back-to-top.name",
  "class": "backtotop",
  "disabled_on": {
    "groups": [
      "header"
    ]
  },
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "default": "scheme_1",
      "label": "t:sections.all.settings.color_scheme.label"
    },
    {
      "type": "color",
      "id": "bg_color",
      "default": "#000000",
      "label": "t:sections.back-to-top.settings.bg_color.label"
    },
    {
      "type": "color",
      "id": "text_color",
      "default": "#ffffff",
      "label": "t:sections.back-to-top.settings.text_color.label"
    },
    {
      "type": "color",
      "id": "border_color",
      "default": "#000000",
      "label": "t:sections.back-to-top.settings.border_color.label"
    },
    {
      "type": "radio",
      "id": "button_shape",
      "default": "circular",
      "label": "t:sections.back-to-top.settings.button_shape.label",
      "options": [
        {
          "value": "square",
          "label": "t:sections.back-to-top.settings.button_shape.options__1.label"
        },
        {
          "value": "circular",
          "label": "t:sections.back-to-top.settings.button_shape.options__2.label"
        }
      ]
    },
    {
      "type": "range",
      "id": "button_size",
      "min": 10,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "t:sections.back-to-top.settings.button_size.label",
      "default": 40
    },
    {
      "type": "range",
      "id": "distancefromright",
      "min": 10,
      "max": 300,
      "step": 5,
      "unit": "px",
      "label": "t:sections.back-to-top.settings.distancefromright.label",
      "default": 30
    },
    {
      "type": "range",
      "id": "distancefrombottom",
      "min": 10,
      "max": 300,
      "step": 5,
      "unit": "px",
      "label": "t:sections.back-to-top.settings.distancefrombottom.label",
      "default": 30
    }
  ]
}
{% endschema %}
